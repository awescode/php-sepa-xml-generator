{
    "name": "dmitrirussu/php-sepa-xml-generator",
    "type": "library",
    "description": "Creates an XML file for a Single Euro Payments Area (SEPA) Direct Debit Payment.",
    "keywords": [
        "SDD",
        "dirdebit",
        "banking",
        "sepa",
        "xml",
        "sepa-xml",
        "sepa-dirdebit"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Dmitri Russu",
            "email": "dmitri.russu@gmail.com"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "cmpayments/iban": "^1.1",
        "ext-dom": "*",
        "ext-simplexml": "*",
        "ext-bcmath": "*",
        "ext-mbstring": "*",
        "ext-libxml": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.3.3"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "SEPA\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
